<% if(success && success.length){%>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3"
  role="alert"
  id="successAlert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<script>
  setTimeout(function () {
    var alert = document.getElementById("successAlert");
    if (alert) {
      alert.classList.remove("show");
      alert.classList.add("fade"); // Start fade out effect
      setTimeout(function () {
        alert.remove(); // Completely remove the element after fade
      }, 500); // Duration of Bootstrap's fade effect (500ms)
    }
  }, 2500); // Time in milliseconds (3000ms = 3 seconds)
</script>
